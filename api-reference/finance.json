  "components": {
    "schemas": {
      "Account": {
        "type": "object",
        "required": ["id", "userId", "type", "status", "balance", "currency"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "accountNumber": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["checking", "savings", "credit", "investment", "loan"]
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "closed", "frozen"]
          },
          "balance": {
            "type": "number",
            "format": "decimal"
          },
          "currency": {
            "type": "string",
            "pattern": "^[A-Z]{3}$"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "interestRate": {
            "type": "number",
            "format": "decimal"
          },
          "creditLimit": {
            "type": "number",
            "format": "decimal"
          },
          "minimumBalance": {
            "type": "number",
            "format": "decimal"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "CreateAccountRequest": {
        "type": "object",
        "required": ["type", "name"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["checking", "savings", "credit", "investment"]
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "initialDeposit": {
            "type": "number",
            "format": "decimal",
            "minimum": 0
          }
        }
      },
      "UpdateAccountRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "frozen"]
          }
        }
      },
      "Balance": {
        "type": "object",
        "required": ["accountId", "currentBalance", "availableBalance", "currency"],
        "properties": {
          "accountId": {
            "type": "string",
            "format": "uuid"
          },
          "currentBalance": {
            "type": "number",
            "format": "decimal"
          },
          "availableBalance": {
            "type": "number",
            "format": "decimal"
          },
          "pendingBalance": {
            "type": "number",
            "format": "decimal"
          },
          "currency": {
            "type": "string",
            "pattern": "^[A-Z]{3}$"
          },
          "lastUpdated": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Transaction": {
        "type": "object",
        "required": ["id", "accountId", "amount", "type", "status", "date"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "accountId": {
            "type": "string",
            "format": "uuid"
          },
          "amount": {
            "type": "number",
            "format": "decimal"
          },
          "type": {
            "type": "string",
            "enum": ["debit", "credit", "transfer", "payment"]
          },
          "status": {
            "type": "string",
            "enum": ["pending", "completed", "failed", "cancelled"]
          },
          "description": {
            "type": "string"
          },
          "reference": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "merchant": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "balance": {
            "type": "number",
            "format": "decimal"
          }
        }
      },
      "CreateTransactionRequest": {
        "type": "object",
        "required": ["accountId", "amount", "type", "description"],
        "properties": {
          "accountId": {
            "type": "string",
            "format": "uuid"
          },
          "amount": {
            "type": "number",
            "format": "decimal"
          },
          "type": {
            "type": "string",
            "enum": ["debit", "credit"]
          },
          "description": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "merchant": {
            "type": "string"
          }
        }
      },
      "Transfer": {
        "type": "object",
        "required": ["id", "fromAccountId", "toAccountId", "amount", "status", "date"],
